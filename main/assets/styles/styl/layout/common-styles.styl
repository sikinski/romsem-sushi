body 
    display grid
    grid-template-columns 320px 1fr 430px
    font-family 'd-din-pro'

    .nav-sidebar
        grid-area: 1 / 1 / 4 / 2

    .header
        grid-area: 1 / 2 / 2 / 3

    .basket-sidebar
        grid-area: 1 / 3 / 4 / 4

    .main
        grid-area: 2 / 2 / 3 / 3
        padding 30px 0
        display flex
        flex-direction column
        align-items center
        background-color grayBg
        // background-color rgb(181, 255, 181)

    .footer
        grid-area: 3 / 2 / 4 / 3
        height 269px
        background-color rgb(255, 202, 202)
        align-self: end;
