.main
    .start-block
        position relative
        text-align right
        background-color white
        .start-pic
            width 70%
            height 90%
        .text-content
            display flex
            position absolute
            padding 25px 20px
            height 100%
            right 0
            top 0
            .name-set
                font-size 30px
                line-height 22px
                font-weight 600
            .weight
                font-size 18px
                line-height 20px
                color orangeCol
                margin 10px 0
                opacity 0.8
            .price
                flex-basis: 70%;
                justify-content center
                font-weight 600
                .last-price                    
                    align-content: center;
                    font-size 22px
                    del
                        position: relative;
                        text-decoration: none;
                        &:before 
                            content: "";
                            width: 100%;
                            height: 0.15em;
                            background: #db7d76;
                            position: absolute;
                            top: 50%;
                            left: 0;
                            transform: rotate(-8deg);
                .actual-price
                    font-size 28px
                    margin 25px 0 
                    
            .buy-btn
                margin 0 auto
                background-color #f46d40
                width 64%
                color white
                font-size 24px
                padding 12px 0
                border-radius 5px
                &:hover
                    background-color darken(#f46d40, 10%)

