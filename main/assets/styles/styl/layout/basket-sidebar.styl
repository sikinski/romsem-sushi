.basket-sidebar
    padding-top 59px
    padding-left 40px
    .block
        max-width 85%
        align-items center
        background-color grayBg
        border-radius 5px
        text-align center
        white-space no-wrap
        .text
            font-weight:500
            font-size 24px
            line-height 30px
        .small-text
            font-size 18px
            line-height 22px
            margin 10px 0
            
    .block-with-btn
        padding-top 12px
        .free-shipping-btn
            width 100%
            height 40px
            background-color orangeCol
            color white
            font-size 14px
            line-height 17px
            color grayBg
            margin-top 26px
            &:hover
                background-color darken(orangeCol, 15%)
    .address-container
        margin-top 20px
        .text
            margin-top 8px
        .map-preview
            width 100%
            height 116px
        .map-btn
            width 60px
            height 60px
            background-color orangeCol
            border-radius 50%
            display flex
            justify-content center
            align-items center
            &:hover
                background-color darken(orangeCol, 15%)

